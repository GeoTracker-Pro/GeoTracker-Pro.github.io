rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Trackers collection: allow read/write for tracking links (may be unauthenticated)
    match /trackers/{trackerId} {
      allow read, write: if true;

      // Locations sub-collection: allow read/write for tracking data
      match /locations/{locationId} {
        allow read, write: if true;
      }
    }
    // Users collection: only authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}
